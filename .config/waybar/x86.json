{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "gtk-layer-shell": true,
    "height": 24, // Waybar height
    "modules-left": ["sway/workspaces", "sway/mode", "custom/media", "sway/window"],
    "modules-center": [],
    "modules-right": ["custom/waybar-mpris", "tray", "idle_inhibitor", "pulseaudio", "backlight", "custom/netinfo", "cpu", "memory", "battery#wacom", "battery#BAT0", "clock"],

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "interval": 2,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 8
    },
    "clock": {
        "format": "{:%H:%M ÔÅ≥ %a %d/%m}",
        "tooltip-format": "{:%Y-%m-%d | %H:%M}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "on-click": "gnome-system-monitor"
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C Ôãá",
        "format": "{temperatureC}¬∞C Ôãâ"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["ÔÅÇ"],
        "on-scroll-down": "brightnessctl set 2%-",
        "on-scroll-up": "brightnessctl set 2%+"
    },
    "battery#BAT0": {
        "bat": "BAT0",
        "adapter": "AC",
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% {icon}ÔÉß",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "on-click": "gnome-power-statistics"
    },
    "battery#wacom": {
        "bat": "wacom_battery_0",
        "format": "{capacity}% ÔÅÄ",
        "format-charging": "{capacity}% ÔÅÄÔÉß"
    },
    "network": {
        // "interface": "wlp2s0", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "ÔÉÅ {ifname}",
        "format-disconnected": "‚ö† Disconnected",
        "on-click": "nm-connection-editor"
    },
    "network#ipaddr": {
        "format": "{ipaddr}/{cidr}",
        "format-disconnected": "",
        "on-click": "nm-connection-editor"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ô™Ä {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["Ô©Ω"]
        },
        "on-click": "pavucontrol"
    },

    //"pulseaudio": {
    //    //"scroll-step": 1,
    //    "format": "{icon} {volume}%",
    //    "format-bluetooth": "{icon}Ôäî {volume}%",
    //    "format-muted": "üîá",
    //    "format-icons": {
    //        "headphones": "Ôñê",
    //        "handsfree": "Ôñê",
    //        "headset": "Ôñê",
    //        "phone": "ÔÇï",
    //        "portable": "ÔÇï",
    //        "car": "ÔÜπ",
    //        "default": ["üîà", "üîâ", "üîä"]
    //    },
    //    "on-click": "pavucontrol"
    //},
    "custom/netinfo": {
        "format": "{}",
        "return-type": "json",
        "exec": "$HOME/.bin/waybar_netinfo",
        "on-click": "killall -USR1 waybar_netinfo",
        "on-click-right": "nm-connection-editor"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üé∂"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    },
    "custom/waybar-mpris": {
        "return-type": "json",
        "exec": "waybar-mpris --autofocus --play '‚ñ∂ ' --pause 'Ô££ '",
        "on-click": "waybar-mpris --send toggle",
        "on-click-right": "waybar-mpris --send player-next",
        "on-scroll-up": "waybar-mpris --send player-next",
        "on-scroll-down": "waybar-mpris --send player-prev",
        // "on-scroll-up": "waybar-mpris --send next",
        // "on-scroll-down": "waybar-mpris --send prev",
        "escape": true,
        "max-length": 100
    },
}
